{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gem: build",
            "type": "shell",
            "command": "gem build jekyll-theme-profile.gemspec"
        },
        {
            "label": "gem: push",
            "type": "shell",
            "command": "gem push jekyll-theme-profile-*.gem"
        },
        {
            "label": "jekyll: serve",
            "type": "shell",
            "command": "bundle exec jekyll serve -s example --verbose --livereload",
            "problemMatcher": []
        },
        {
            "label": "jekyll: build",
            "type": "shell",
            "command": "bundle exec jekyll build -s example --verbose",
            "problemMatcher": []
        },
        {
            "label": "bundle: update",
            "type": "shell",
            "command": "bundle update",
            "problemMatcher": []
        },
        {
            "label": "bundle: install",
            "type": "shell",
            "command": "bundle install",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": ".github/build.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": ".github/test.sh",
            "problemMatcher": [],
            "dependsOn": ["build"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "env": {
                    "HOSTURL": "www.althack.dev",
                    "BASEURL": "/jekyll-theme-profile"
                }
            }
        },
        {
            "label": "release",
            "type": "shell",
            "command": ".github/release.sh jekyll-theme-profile.gemspec",
            "problemMatcher": []
        },
    ]
}
