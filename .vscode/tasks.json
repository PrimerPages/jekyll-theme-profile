{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gem: build",
            "type": "shell",
            "command": "gem build jekyll-theme-profile.gemspec"
        },
        {
            "label": "gem: push",
            "type": "shell",
            "command": "gem push jekyll-theme-profile-*.gem"
        },
        {
            "label": "bundle: update",
            "type": "shell",
            "command": "bundle update",
            "problemMatcher": []
        },
        {
            "label": "bundle: install",
            "type": "shell",
            "command": "bundle install",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": ".github/build.sh",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "linux":{
                "options": {
                    "env": {
                        "JEKYLL_FOLDER": "${input:folder}",
                        "BUNDLE_GEMFILE": "${input:folder}/Gemfile"
                    }
                }
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": ".github/test.sh",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": ["build"]
        },
        {
            "label": "serve",
            "type": "shell",
            "command": ".github/serve.sh",
            "problemMatcher": [],
            "linux":{
                "options": {
                    "env": {
                        "JEKYLL_FOLDER": "${input:folder}",
                        "BUNDLE_GEMFILE": "${input:folder}/Gemfile"
                    }
                }
            }
        },
        {
            "label": "release",
            "type": "shell",
            "command": ".github/release.sh jekyll-theme-profile.gemspec",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "folder",
            "type": "pickString",
            "options": [".", "demo"],
            "default": ".",
            "description": "Folder to build"
        }
    ]
}
